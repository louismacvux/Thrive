<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4DF89945"
    tools:context="com.comp3350.UI.WellnessResult">

    <TextView
        android:id="@+id/health_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/text_view"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bmi_result_text" />

    <TextView
        android:id="@+id/weight_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/your_weight"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/weight_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/text_view"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/weight_result_text"
        app:layout_constraintStart_toEndOf="@+id/weight_result_text"
        app:layout_constraintTop_toTopOf="@+id/weight_result_text" />

    <TextView
        android:id="@+id/height_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/your_height"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/weight_result_text"
        app:layout_constraintTop_toBottomOf="@+id/weight_result_text" />

    <TextView
        android:id="@+id/height_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/text_view"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/height_result_text"
        app:layout_constraintStart_toEndOf="@+id/height_result_text"
        app:layout_constraintTop_toTopOf="@+id/height_result_text" />

    <TextView
        android:id="@+id/mc_result_text"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginStart="48dp"
        android:text="@string/calories_message"
        android:textSize="22sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="505dp" />

    <TextView
        android:id="@+id/mc_result"
        android:layout_width="313dp"
        android:layout_height="92dp"
        android:layout_marginTop="50dp"
        android:text="@string/text_view"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@+id/height_result_text"
        app:layout_constraintTop_toBottomOf="@+id/height_result_text" />

    <TextView
        android:id="@+id/bmi_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/your_bmi_result_is"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/mc_result"
        app:layout_constraintTop_toBottomOf="@+id/mc_result" />

    <TextView
        android:id="@+id/bmi_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="@string/text_view"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/bmi_result_text"
        app:layout_constraintStart_toEndOf="@+id/bmi_result_text"
        app:layout_constraintTop_toTopOf="@+id/bmi_result_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/pounds"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/weight_result"
        app:layout_constraintStart_toEndOf="@+id/weight_result"
        app:layout_constraintTop_toTopOf="@+id/weight_result" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/cm"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/height_result"
        app:layout_constraintStart_toEndOf="@+id/height_result"
        app:layout_constraintTop_toTopOf="@+id/height_result" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/your_wellness_result"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>