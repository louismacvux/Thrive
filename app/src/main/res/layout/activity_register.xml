<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#FFFDFD"
    android:orientation="vertical"
    tools:context="com.example.comp3350.UI.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#74FF8D58">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="50dp"
                android:text="@string/registration"
                android:textColor="#4C4A4A"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edittext_username"
                android:layout_width="289dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:autofillHints=""
                android:background="#F6DEDE"
                android:ems="10"
                android:hint="   username"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edittext_useremail"
                android:layout_width="289dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:autofillHints=""
                android:background="#F6DEDE"
                android:ems="10"
                android:hint="   email address"
                android:inputType="textEmailAddress"
                android:textColor="#424141" />

            <EditText
                android:id="@+id/edittext_password"
                android:layout_width="289dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:autofillHints=""
                android:background="#F6DEDE"
                android:ems="10"
                android:hint="   password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/edittext_confrim_password"
                android:layout_width="289dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:autofillHints=""
                android:background="#F6DEDE"
                android:ems="10"
                android:hint="   confirm password"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="32dp"
                android:text="Please enter all of the entries below."
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="8dp"
                android:text="@string/gender" />

            <RadioGroup
                android:id="@+id/radioGroup_gender"
                android:layout_width="208dp"
                android:layout_height="33dp"
                android:layout_marginLeft="64dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioBtn_female"
                    android:layout_width="100dp"
                    android:layout_height="32dp"
                    android:onClick="onRadioButtonClicked"
                    android:text="@string/female"
                    android:textColor="#474747" />

                <RadioButton
                    android:id="@+id/radioBtn_male"
                    android:layout_width="100dp"
                    android:layout_height="32dp"
                    android:onClick="onRadioButtonClicked"
                    android:text="@string/male"
                    android:textColor="#454545" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="32dp"
                android:text="@string/how_old_are_you" />

            <EditText
                android:id="@+id/edittext_age"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="-24dp"
                android:autofillHints=""
                android:background="#F6DDDB"
                android:ems="10"
                android:hint="@string/age"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="32dp"
                android:text="@string/weight_lbs" />

            <EditText
                android:id="@+id/edittext_weight"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="-24dp"
                android:autofillHints=""
                android:background="#F4D9D9"
                android:ems="10"
                android:hint="@string/weight"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="32dp"
                android:text="@string/height_cm" />

            <EditText
                android:id="@+id/edittext_height"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="-24dp"
                android:autofillHints=""
                android:background="#F1D9D9"
                android:ems="10"
                android:hint="@string/height"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button_done_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginTop="40dp"
                android:text="@string/done_registration"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>